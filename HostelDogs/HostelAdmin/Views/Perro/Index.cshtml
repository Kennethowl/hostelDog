@model IEnumerable<HostelDogSettings.Perro>

@{
    ViewBag.Title = "Perros";
}

<h2 class="blockquote">Listado de Perros</h2>

<br>

<button type="button" class="btn btn-info">@Html.ActionLink("Agregar Registro", "Create")</button>

<br>
<br />

<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechadeIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Raza.Descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechadeIngreso)
                </td>
                <td>
                    <img src="@item.Imagen" alt="@item.Nombre" style="width:200px; height:auto;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Raza.Descripcion)
                </td>
                <td>
                    <button type="button" class="btn btn-success">@Html.ActionLink("Editar", "Edit", new { id = item.ID })</button> |
                    <button type="button" class="btn btn-info">@Html.ActionLink("Detalle", "Details", new { id = item.ID })</button> |
                    <button type="button" class="btn btn-danger">@Html.ActionLink("Eliminar", "Delete", new { id = item.ID })</button>
                </td>
            </tr>
        }
    </tbody>
</table>
